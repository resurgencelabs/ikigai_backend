{
    "name": "subscription",
    "version": "1.0.0",
    "description": "Primary contract to test out the Subscription Contract",
    "main": "index.js",
    "license": "MIT",
    "type": "module",
    "private": true,
    "scripts": {
      "build": "yarn clean && tsc -b",
      "build:dev": "tsc -b --watch",
      "clean": "rm -rf ./dest tsconfig.tsbuildinfo",
      "start": "yarn build && DEBUG='subscription' node ./dest/index.js",
      "compile:contracts": "aztec-cli compile ./src/contracts/token --typescript types && yarn generate:token:interface && aztec-cli compile ./src/contracts/subscription --typescript types",
      "generate:token:interface": "aztec-cli generate-noir-interface ./src/contracts/token --artifacts target --outdir ../subscription/src"
    },
    "dependencies": {
      "@aztec/aztec.js": "^0.9.0",
      "@aztec/noir-contracts": "^0.9.0",
      "@types/node": "^20.8.7",
      "typescript": "^5.2.2"
    }
  }
  